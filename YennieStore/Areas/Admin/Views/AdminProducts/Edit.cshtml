@model YennieStore.Models.Product
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
        <link href="~/Adminassets/summernote/summernote-bs4.css" rel="stylesheet" />
        <link href="~/Adminassets/summernote/summernote.css" rel="stylesheet" />
}

    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" class="breadcrumb-item">Cập nhật sản phẩm</a>
                <span class="breadcrumb-item active">Cập nhật sản phẩm : @Model.ProductName</span>
            </nav>
        </div>
    </div>

    <form asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@Model.ProductId" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Thumb" />
        <input type="hidden" asp-for="DateCreated" />
        <div class="page-header no-gutters has-tab">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin chi tiết</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#product-edit-option">Tiêu đề</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#product-edit-description">Mô tả</a>
                </li>
            </ul>
        </div>
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active" id="product-edit-basic">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productName">Tên sản phẩm</label>
                            <input type="text" class="form-control" asp-for="ProductName">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-semibold" for="imei">Số Imei</label>
                            <input type="number" class="form-control" asp-for="Imei">
                        </div>
                        <div class="form-group">
                            <label class="font-weight-semibold" for="ShortDesc">Mô tả</label>
                            <input type="text" class="form-control" asp-for="ShortDesc">
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-semibold" for="productPrice">Giá bán</label>
                                <input type="number" class="form-control" asp-for="Price">
                            </div>
                            <div class="form-group col-md-6">
                                <label class="font-weight-semibold" for="productPrice">% giảm</label>
                                <input type="number" class="form-control" asp-for="DiscountPercentage">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label class="font-weight-semibold" for="productCategory">Danh mục sản phẩm</label>
                                <select class="custom-select" asp-for="CatId" style="min-width: 200px;" asp-items="ViewBag.DanhMuc">
                                    <option value="" disabled selected>Chọn danh mục</option>
                                </select>
                            </div>
                            <div class="form-group col-6">
                                <label class="font-weight-semibold" for="productBrand">Thương hiệu</label>
                                <select class="custom-select" asp-for="IdBrand" style="min-width: 200px;" asp-items="ViewBag.ThuongHieu">
                                    <option value="" disabled selected>Chọn thương hiệu</option>
                                </select>
                            </div>
                            <div class="form-group col-6">
                                <label class="font-weight-semibold" for="productColor">Màu sắc</label>
                                <select class="custom-select" asp-for="IdColor" style="min-width: 200px;" asp-items="ViewBag.MauSac">
                                    <option value="" disabled selected>Chọn màu sắc</option>
                                </select>
                            </div>
                            <div class="form-group col-6">
                                <label class="font-weight-semibold" for="productName">Hàng tồn kho</label>
                                <input type="text" class="form-control" asp-for="UnitsInStock">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productBrand">Ảnh đại diện</label>
                            <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" />
                            <span asp-validation-for="Thumb" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="m-t-25">
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" asp-for="Active">
                                        <label for="Active"></label>
                                    </div>
                                    <label>Public</label>
                                </div>
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" asp-for="HomeFlag">
                                        <label for="HomeFlag"></label>
                                    </div>
                                    <label>HomeFlag</label>
                                </div>
                                <div class="form-group d-flex align-items-center">
                                    <div class="switch m-r-10">
                                        <input type="checkbox" asp-for="BestSellers">
                                        <label for="BestSellers"></label>
                                    </div>
                                    <label>BestSellers</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="product-edit-option">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="productSize">Title</label>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>

                        <div class="form-group">
                            <label class="font-weight-semibold" for="productFit">Tags</label>
                            <input type="text" class="form-control" asp-for="Tags">
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="product-edit-description">
                <div class="card">
                    <div class="card-body">
                        <div class="card-body">
                            <textarea class="summernote" asp-for="Description"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>
    </form>

    @section Scripts {
        <script src="~/Adminassets/vendors/select2/select2.min.js"></script>
        <script src="~/Adminassets/js/pages/e-commerce-product-edit.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
        <script src="~/Adminassets/summernote/summernote-bs4.js"></script>

        <script>
            jQuery(document).ready(function () {
                $('.summernote').summernote({
                    fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                    styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                    height: 200,
                    minHeight: null,
                    maxHeight: null,
                    focus: true
                });
            });</script>
    }


