@model YennieStore.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Chi tiết sản phẩm : @Model.ProductName</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <h2 class="card-title">Chi tiết sản phẩm : @Model.ProductName</h2>
    <div class="table table-striped">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                </tr>
                <tr>
                    <td>Tên sản phẩm:</td>
                    <td>@Model.ProductName</td>
                </tr>
                <tr>
                    <td>Số Imei:</td>
                    <td>@Model.Imei</td>
                </tr>
                <tr>
                    <td>Màu sắc:</td>
                    <td>@ViewBag.NameColor</td>
                </tr>
                <tr>
                    <td>Mô tả ngắn:</td>
                    <td>@Model.ShortDesc</td>
                </tr>
                <tr>
                    <td>Giá:</td>
                    <td>@Model.Price.Value.ToString("#,##0") VNĐ</td>
                </tr>
                <tr>
                    <td>Giá giảm:</td>
                    <td>@Model.Discount.Value.ToString("#,##0") VNĐ</td>
                </tr>
                <tr>
                    <td>Danh mục:</td>
                    <td>@Model.Cat.CatName</td>
                </tr>
                <tr>
                    <td>Thương hiệu:</td>
                    <td>@Model.Brand.NameBrand</td>
                </tr>
                <tr>
                    <td>Ngày tạo:</td>
                    <td>@Model.DateCreated</td>
                </tr>
                <tr>
                    <td>Ngày chỉnh sửa:
                    <td>@Model.DateModified</td>
                </tr>
                <tr>
                    <td>Tiêu đề:</td>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <td>Tags:</td>
                    <td>@Model.Tags</td>
                </tr>
                <tr>
                    <td>Trạng thái:</td>
                    <td>
                        @if (Model.Active)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Bestseller:</td>
                    <td>
                        @if (Model.BestSellers)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>HomeFlag:</td>
                    <td>
                        @if (Model.HomeFlag)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" disabled />
                                <label for="switch-1"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Hình:</td>
                    <td>
                        <img width="100" height="100" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
                    </td>
                </tr>
                <tr>
                    <td>Mô tả sản phẩm:</td>
                    <td>@Html.Raw(Model.Description)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div>
        <a style="margin-right: 10px;" class="btn btn-primary" asp-action="Index">Quay lại</a>
    </div>
</div>




