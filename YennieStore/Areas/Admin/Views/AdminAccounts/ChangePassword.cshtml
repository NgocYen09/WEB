@model YennieStore.Areas.Admin.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    <h4>Đổi mật khẩu</h4>
    <div class="m-t-25" style="max-width: 700px">
        <form asp-controller="AdminAccounts" asp-action="ChangePassword" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="AccountId">ID</label>
                    <input asp-for="AccountId" class="form-control" disabled >
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" >
                </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Password">Mật khẩu hiện tại</label>
                        <input asp-for="PasswordNow" type="password" class="form-control" >
                    </div>
                  </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Password">Mật khẩu mới</label>
                    <input asp-for="Password" type="password" class="form-control" >
                </div>
                    <div class="form-group col-md-6">
                        <label asp-for="ConfirmPassword">Nhập lại mật khẩu</label>
                        <input asp-for="ConfirmPassword"type ="password" class="form-control" >
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
        </form>
    </div>
</div>

