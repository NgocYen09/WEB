@model YennieStore.Models.Account
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class=" page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon antion-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" class="breadcrumb-item">Cập nhật Admin</a>
            <span class="breadcrumb-item active">Cập nhật Admin : @Model.FullName</span>
        </nav>
    </div>
</div>

<h2 class="card-title">Cập nhật Admin : @Model.FullName</h2>
<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" />

            <div class="row">
                <div class="form-group col-6">
                    <label class="font-weight-semibold" for="FullName">Tên Admin</label>
                    <input asp-for="FullName" class="form-control"/>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label class="font-weight-semibold" for="Password">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label class="font-weight-semibold" for="Phone">Số điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label class="font-weight-semibold" for="Roles">Quyền truy cập</label>
                    <input asp-for="RoleId" class="form-control" />
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label class="font-weight-semibold" for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label class="font-weight-semibold" for="CreateDate">Ngày tạo</label>
                    <input asp-for="CreateDate" class="form-control" />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label class="font-weight-semibold" for="LastLogin">Lần đăng nhập cuối cùng</label>
                    <input asp-for="LastLogin" class="form-control" />
                    <span asp-validation-for="LastLogin" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex align-items-center">
                <div class="switch m-r-10">
                    <input type="checkbox" asp-for="Active">
                    <label for="Active"></label>
                </div>
                <label>Active</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</div>
