@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<YennieStore.Models.Review>
@{

    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách đánh giá sản phẩm" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ Admin</a>
            <span class="breadcrumb-item active">Danh sách đánh giá sản phẩm : trang @CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Tên khách hàng</th>
                        <th>Tên sản phẩm</th>
                        <th>Nội dung</th>
                        <th>Số sao</th>
                        <th>Ngày đánh giá</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                            <tr class="text-center">
                                <td>@item.ReviewId</td>
                                <td>@item.CustomerName</td>
                                <td>@item.ProductName</td>
                                <td>@item.Content</td>
                                <td>@item.Rate</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.Status</td>
                            </tr>
                }
            }
        </tbody>
    </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminReviews" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>

